<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gezito</title>
    <link rel="icon" href="/images/favicon.ico" type="image/x-icon">
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
</head>
<body class="bg-white">
    <%- include('partials/header') %>

    <!-- Hero Section -->
    <section class="relative h-[450px] overflow-hidden">
        <!-- Swiper -->
        <div class="swiper heroSwiper h-full">
            <div class="swiper-wrapper">
                <div class="swiper-slide relative">
                    <img src='/images/doğal.jpg' alt="Türkiye Gezilecek Yerler" class="w-full h-full object-cover">
                    <div class="absolute inset-0 bg-black bg-opacity-30"></div>
                    <div class="absolute inset-0 flex items-center justify-center text-white text-center z-10">
                        <div class="slide-content">
                            <h2 class="text-3xl font-bold mb-2">Doğal Güzellikler</h2>
                            <p class="text-lg">Türkiye'nin eşsiz doğal güzellikleri</p>
                        </div>
                    </div>
                </div>
                <!-- Slide 2 -->
                <div class="swiper-slide relative">
                    <img src='/images/tarih.jpg' alt="Tarihi Mekanlar" class="w-full h-full object-cover">
                    <div class="absolute inset-0 bg-black bg-opacity-30"></div>
                    <div class="absolute inset-0 flex items-center justify-center text-white text-center">
                        <div>
                            <h2 class="text-3xl font-bold mb-2">Tarihi Mekanlar</h2>
                            <p class="text-lg">Binlerce yıllık tarih</p>
                        </div>
                    </div>
                </div>
                <!-- Slide 3 -->
                <div class="swiper-slide relative">
                    <img src='/images/kültür.jpg' alt="Kültürel Yerler" class="w-full h-full object-cover">
                    <div class="absolute inset-0 bg-black bg-opacity-30"></div>
                    <div class="absolute inset-0 flex items-center justify-center text-white text-center">
                        <div>
                            <h2 class="text-3xl font-bold mb-2">Kültürel Zenginlik</h2>
                            <p class="text-lg">Anadolu'nun zengin kültürü</p>
                        </div>
                    </div>
                </div>
                <!-- Slide 4 -->
                <div class="swiper-slide relative">
                    <img src='/images/turistlik.jpg' alt="Turistik Yerler" class="w-full h-full object-cover">
                    <div class="absolute inset-0 bg-black bg-opacity-30"></div>
                    <div class="absolute inset-0 flex items-center justify-center text-white text-center">
                        <div>
                            <h2 class="text-3xl font-bold mb-2">Turistik Bölgeler</h2>
                            <p class="text-lg">En popüler turistik mekanlar</p>
                        </div>
                    </div>
                </div>
                <!-- Slide 5 -->
                <div class="swiper-slide relative">
                    <img src='/images/plaj.jpg' alt="Plajlar" class="w-full h-full object-cover">
                    <div class="absolute inset-0 bg-black bg-opacity-30"></div>
                    <div class="absolute inset-0 flex items-center justify-center text-white text-center">
                        <div>
                            <h2 class="text-3xl font-bold mb-2">Muhteşem Plajlar</h2>
                            <p class="text-lg">Turkuaz sahiller ve altın kumlar</p>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Navigasyon düğmeleri -->
            <div class="swiper-button-next !text-white !opacity-70 hover:!opacity-100"></div>
            <div class="swiper-button-prev !text-white !opacity-70 hover:!opacity-100"></div>
            
            <!-- Pagination noktaları -->
            <div class="swiper-pagination"></div>
        </div>
    </section>

    <!-- Popüler Şehirler -->
    <section class="py-16 bg-white">
        <div class="container mx-auto px-4">
            <h2 class="text-3xl font-bold text-gray-900 mb-8">Popüler Şehirler</h2>
            <!-- İlk Satır -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-6">
                <% cities.slice(0, 4).forEach(city => { %>
                    <div class="bg-white rounded-lg shadow-md overflow-hidden cursor-pointer transform transition duration-300 hover:scale-105" onclick="window.location.href='/sehir/<%= city.slug %>'">
                        <div class="relative h-48">
                            <img src="/images/<%= city.slug %>.jpg" alt="<%= city.name %>" class="w-full h-full object-cover rounded-t-lg">
                            <div class="absolute inset-0 bg-black bg-opacity-20 transition duration-300 hover:bg-opacity-10"></div>
                        </div>
                        <div class="p-4">
                            <h3 class="text-xl font-semibold text-gray-900"><%= city.name %></h3>
                        </div>
                    </div>
                <% }); %>
            </div>
            <!-- İkinci Satır -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
                <% cities.slice(4, 8).forEach(city => { %>
                    <div class="bg-white rounded-lg shadow-md overflow-hidden cursor-pointer transform transition duration-300 hover:scale-105" onclick="window.location.href='/sehir/<%= city.slug %>'">
                        <div class="relative h-48">
                            <img src="/images/<%= city.slug %>.jpg" alt="<%= city.name %>" class="w-full h-full object-cover rounded-t-lg">
                            <div class="absolute inset-0 bg-black bg-opacity-20 transition duration-300 hover:bg-opacity-10"></div>
                        </div>
                        <div class="p-4">
                            <h3 class="text-xl font-semibold text-gray-900"><%= city.name %></h3>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </section>

    <!-- Popüler Ülkeler -->
    <section class="py-16 bg-gray-50">
        <div class="container mx-auto px-4">
            <h2 class="text-3xl font-bold text-gray-900 mb-8">Popüler Ülkeler</h2>
            <!-- İlk Satır -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-6">
                <% countries.slice(0, 4).forEach(country => { %>
                    <div class="bg-white rounded-lg shadow-md overflow-hidden cursor-pointer transform transition duration-300 hover:scale-105" onclick="window.location.href='/ulke/<%= country.slug %>'">
                        <div class="relative h-48">
                            <img src="/images/<%= country.slug %>.jpg" alt="<%= country.name %>" class="w-full h-full object-cover rounded-t-lg">
                            <div class="absolute inset-0 bg-black bg-opacity-20 transition duration-300 hover:bg-opacity-10"></div>
                        </div>
                        <div class="p-4">
                            <h3 class="text-xl font-semibold text-gray-900"><%= country.name %></h3>
                        </div>
                    </div>
                <% }); %>
            </div>
            <!-- İkinci Satır -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
                <% countries.slice(4, 8).forEach(country => { %>
                    <div class="bg-white rounded-lg shadow-md overflow-hidden cursor-pointer transform transition duration-300 hover:scale-105" onclick="window.location.href='/ulke/<%= country.slug %>'">
                        <div class="relative h-48">
                            <img src="/images/<%= country.slug %>.jpg" alt="<%= country.name %>" class="w-full h-full object-cover rounded-t-lg">
                            <div class="absolute inset-0 bg-black bg-opacity-20 transition duration-300 hover:bg-opacity-10"></div>
                        </div>
                        <div class="p-4">
                            <h3 class="text-xl font-semibold text-gray-900"><%= country.name %></h3>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <%- include('partials/footer') %>

    <script>
        // Slider inicializasyonu
        const swiper = new Swiper('.heroSwiper', {
            loop: true,
            effect: 'fade',
            fadeEffect: {
                crossFade: true
            },
            autoplay: {
                delay: 5000,
                disableOnInteraction: false,
            },
            pagination: {
                el: '.swiper-pagination',
                clickable: true,
            },
            navigation: {
                nextEl: '.swiper-button-next',
                prevEl: '.swiper-button-prev',
            },
        });
    </script>

</body>
</html>